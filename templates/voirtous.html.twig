{% extends 'base.html.twig' %}
{% block title %}Ship types{% endblock %}

{% block body %}
    <div class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" style="width: 100px;">IMO</th>
                    <th scope="col">Nom</th>
                    <th scope="col">MMSI</th>
                    <th scope="col">Type</th>
                    <th scope="col">Destination</th>
                    <th scope="col">ETA</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for navire in navires %}
                    <tr class="table-primary">
                        <td>{{ navire.IMO }}</td>
                        <td>{{ navire.nom }}</td>
                        <td>{{ navire.MMSI }}</td>
                        <td>{{ navire.type }}</td>
                        <td>{{ navire.destination }}</td>
                        <td>{{ navire.eta }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}